@model IEnumerable<SysCafeteriasweetcoffee.Models.Orden>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/index.css">
</head>

<h1>Index</h1>


<p>
    <div>
        <a asp-action="Create">
            <button class="view-all-btn">Crear Nuevo</button>
        </a>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                    @if (item.IdUsuarioNavigation != null)
                    {
                        @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Nombre) <!-- Usa Nombre si quieres mostrar el nombre del usuario -->
                    }
                    else
                    {
                        <span>No asignado</span>
                    }
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-custom">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-custom">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-custom">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
