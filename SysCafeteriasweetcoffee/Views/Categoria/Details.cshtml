@model SysCafeteriasweetcoffee.Models.Categoria

@{
    ViewData["Title"] = "Detalles de la Categoría";
}

<div class="container mt-4">
    <!-- Contenedor para la imagen y los detalles -->
    <div class="row align-items-center mb-5">
        <!-- Imagen de la categoría -->
        <div class="col-md-6 text-center">
            <img src="@Model.img" alt="Imagen de la categoría" class="img-fluid rounded" style="max-height: 300px;">
        </div>

        <!-- Información de la categoría -->
        <div class="col-md-6">
            <h1 class="display-5">Detalles de la Categoría</h1>
            <h4>Información de la Categoría</h4>
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
            </dl>

            <!-- Botones de acción -->
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    </div>
    </div>

    <!-- Lista de productos asociados -->
    <!-- Sección para mostrar los productos asociados a la categoría -->
    <div>
        <h2 class="mt-5">Productos en esta Categoría</h2>
        <div class="row">
            @foreach (var producto in Model.Producto)
            {
                <div class="col-md-3 mb-3">
                    <div class="dessert-item">
                        <!-- Imagen del producto -->
                        <img src="@producto.img" class="card-img-top" alt="Imagen del producto" style="height: 200px; object-fit: cover;">

                        <!-- Contenido de la tarjeta -->
                        <div class="card-body">
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text">
                                <small class="text-muted">Precio: @producto.Precio</small><br>
                                <small class="text-muted">Descripción: @producto.Descripcion</small><br>
                            </p>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-controller="Producto" asp-route-id="@producto.Id" class="btn btn-outline-secondary">Ver</a>
                                <a asp-action="Edit" asp-controller="Producto" asp-route-id="@producto.Id" class="btn btn-outline-info">Editar</a>
                                <a asp-action="Delete" asp-controller="Producto" asp-route-id="@producto.Id" class="btn btn-outline-danger">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
