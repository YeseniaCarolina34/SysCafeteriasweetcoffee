@model SysCafeteriasweetcoffee.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/formulario.css">
</head>

<div class="container mt-4">
    
    <div class="details-form">
        <h3 class="text-center mb-3">¿Estás seguro que deseas eliminar este usuario?</h3>

        <!-- Campos del Usuario en dos columnas -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Nombre:</label>
                    <div class="details-field">
                        @Html.DisplayFor(model => model.Nombre)
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Login:</label>
                    <div class="details-field">
                        @Html.DisplayFor(model => model.Login)
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Fecha de Registro:</label>
                    <div class="details-field">
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Apellido:</label>
                    <div class="details-field">
                        @Html.DisplayFor(model => model.Apellido)
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Estatus:</label>
                    <div class="details-field">
                        @Html.DisplayFor(model => model.Estatus)
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Rol:</label>
                    <div class="details-field">
                        @Html.DisplayFor(model => model.IdRolNavigation.Id)
                    </div>
                </div>
            </div>
        </div>

        <!-- Botones -->
        <div class="button-group text-center mt-4">
            <form asp-action="Delete" style="display: inline;">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>

    <!-- Botón Back to List -->
    <div class="btn-back text-center mt-3">
        <a asp-action="Index">
            <button class="view-all-btn">Regresar</button>
        </a>
    </div>
</div>
