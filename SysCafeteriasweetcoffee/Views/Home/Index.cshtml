@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sweet Charm - Pastries</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <h1 class="logo">Sweet Coffe</h1>
            <p class="subtitle">The first Asian pastry shop in the Netherlands</p>
            <button class="discover-btn">Productos</button>
        </header>

        <section class="featured">
            <h2>Sweet Coffe Drinks</h2>
            <div class="desserts-grid">
                <div class="dessert-item">
                    <img src="~/img/cc.jpg" alt="Mango Mochi">
                    <h3>Cafés Calientes</h3>
                    <p>Bebidas con los mejores granos de café 100% arábica.</p>
                    <a asp-controller="Categoria" asp-action="C1">
                        <button class="view-all-btn">Ver todos</button>
                    </a>
                </div>
                <div class="dessert-item">
                    <img src="~/img/frio.jpg" alt="Matcha Roll">
                    <h3>Bebidas Frías</h3>
                    <p>Bebidas refrescantes de hielo batido con base de café.</p>
                    <button class="view-all-btn">Ver todos</button>
                    </div>
                <div class="dessert-item">
                    <img src="~/img/te.jpg" alt="Matcha Roll">
                    <h3>Tés e Infusiones</h3>
                    <p>Diferentes mezclas de té para tus mejores infusiones.</p>
                    <button class="view-all-btn">Ver todos</button>
                </div>
                <div class="dessert-item">
                    <img src="~/img/special.jpg" alt="Matcha Roll">
                    <h3>Bebidas Especiales</h3>
                    <p>Bebidas refrescantes, con frutas y base de café.</p>
                    <button class="view-all-btn">Ver todos</button>
                </div>
        </section>
        <section class="featured">
            <h2>Sweet Coffe Food</h2>
            <div class="desserts-grid">
            <div class="dessert-item">
                <img src="~/img/desayunos.jpg" alt="Matcha Roll">
                <h3>Desayunos</h3>
                <p>Una variedad de opciones para empezar el día con energía y nutrición.</p>
                <button class="view-all-btn">Ver todos</button>
            </div>
            <div class="dessert-item">
                <img src="~/img/snacks.jpg" alt="Matcha Roll">
                <h3>Snacks y Aperitivos</h3>
                <p>Bocadillos ligeros y rápidos para acompañar cualquier bebida.</p>
                <button class="view-all-btn">Ver todos</button>
            </div>
            <div class="dessert-item">
                <img src="~/img/paninis.jpg" alt="Matcha Roll">
                <h3>Sandwiches y Paninis</h3>
                <p> Opciones que combinan pan fresco con rellenos abundantes y sabrosos.</p>
                <button class="view-all-btn">Ver todos</button>
            </div>
            <div class="dessert-item">
                <img src="~/img/postres.jpg" alt="Mango Mochi">
                <h3>Postres</h3>
                <p>Dulces clásicos que complementan perfectamente una bebida caliente o fría.</p>
                <button class="view-all-btn">Ver todos</button>
            </div>
            </section>
    </div>
</body>
</html>

