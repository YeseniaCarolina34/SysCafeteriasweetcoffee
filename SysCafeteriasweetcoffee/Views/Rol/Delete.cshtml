@model SysCafeteriasweetcoffee.Models.Rol

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/formulario.css">
</head>

<div class="container mt-4">
    <h2 class="text-center text-primary">Eliminar</h2>
    <div class="details-form">
        <h3 class="text-center mb-3">¿Estás seguro que deseas eliminar este rol?</h3>

        <!-- Campo Rol -->
        <div class="form-group">
            <label class="form-label">Rol:</label>
            <div class="details-field">
                @Html.DisplayFor(model => model.Nombre)
            </div>
        </div>
        <div class="button-group text-center">
            <!-- Botón Delete -->
            <form asp-action="Delete" style="display: inline;">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>

           
        </div>
        
    </div>
    <!-- Botones -->
    <!-- Botón Back to List -->
    <div class="btn-back">
        <a asp-action="Index">
            <button class="view-all-btn">Regresar</button>
        </a>
    </div>
</div>
